<!DOCTYPE html>
<html lang="en" ng-app="canvas">
<head>
  %= include 'header.inc', title => 'KororaProject'
</head>
<body>
  %= include 'noscript.inc'

  <div class="page-container">

    %= include 'navigation.inc', active => 'news'

    <div class="page-content">
      <!-- CONTENT -->

      <div id="page-about" class="container">
        <div class="row">
          <div class="col-sm-12">
            <h1 class="page-title"><strong>News.</strong> Latest Updates</h1>
          </div>
        </div>
        % foreach my $n ( @{ $news->{items} } ) {
        <div class="row">
          <div class="col-sm-12">
            <a href="/news/<%= $n->name %>"><h2><%= $n->title %></h2></a>
            <h3 class="subtitle"><%= $n->author_id->username %> | <%= $n->created->strftime('%e %B, %Y') %></h3>
            <div class="news-excerpt">

%== render_markdown( $n->excerpt );

            </div>
            <div>
              <a class="btn btn-default" href="/news/<%= $n->name %>">Read more ... </a>
            </div>

          </div>
        </div>
        <div class="hr"></div>
% }

% if( $news->{item_count} > $news->{page_size} ) {
        <div class="row">
          <div class="col-sm-offset-5 col-sm-2 text-center">
            <div class="btn-group">
% if( $news->{page} > 1 ) {
              <a href="<%= url_for('/news?page=' . ($news->{page} - 1) ) %>" class="btn btn-default"><i class="fa fa-fw fa-chevron-left"></i></a>
% }
% if( $news->{page} < $news->{page_last}+1 ) {
              <a href="<%= url_for('/news?page=' . ($news->{page} + 1) ) %>" class="btn btn-default"><i class="fa fa-fw fa-chevron-right"></i></a>
% }
            </div>
          </div>
        </div>
% }
% if( news_can_add ) {
        <div class="row">
          <div class="col-sm-12">
            <div class="text-right">
              <a class="btn btn-danger" href="/news/create">Create</a>
            </div>
          </div>
        </div>
        <div class="hr"></div>
% }
      </div>

      <!-- END CONTENT -->
    </div>
  </div>

  %= include 'footer.inc'

  <!-- MODALS -->
  %= include 'authenticate.inc'

  <!-- SCRIPTS -->
  %= include 'scripts.inc'

</body>
</html>
