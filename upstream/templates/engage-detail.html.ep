<!DOCTYPE html>
<html lang="en" ng-app="canvas">
<head>
  %= include 'header.inc', title => 'KororaProject'
</head>
<body>
  %= include 'noscript.inc'

  <div class="page-container">

    %= include 'navigation.inc', active => 'support'

    <div class="page-content">
      <!-- CONTENT -->

      <div id="page-about" class="container">
        <div class="row">
          <div class="col-sm-12">
            <h1 class="page-title"><a href="/support/engage"><strong>Engage.</strong></a> Your Community</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="callout engage-detail engage-<%= $response->type %>">
              <%== engage_icon( $response->type, 'engage-detail-title-icon' )%>
              <h2 class="engage-detail-title"><%= $response->title %></h2>

%== render_markdown( $response->content )

              <div class="engage-detail-tags">
% foreach my $t ( $response->tags ) {
                <span class="label label-default"><%= $t->name %></span>
% }
              </div>

% if( is_active_auth ) {
              <div class="engage-detail-admin">
%   if( engage_post_can_subscribe( $response ) ) {
                <a href="<%= url_for('current') . '/subscribe' %>" class="btn btn-xs btn-danger"><i class="fa fa-fw fa-bookmark"></i> Subscribe</a>
%   } else {
                <a href="<%= url_for('current') . '/unsubscribe' %>" class="btn btn-xs btn-danger"><i class="fa fa-fw fa-bookmark-o"></i> Unsubscribe</a>
%   }
%   if( engage_post_can_edit( $response ) ) {
                <a href="<%= url_for('current') . '/edit' %>" class="btn btn-xs btn-danger"><i class="fa fa-fw fa-edit"></i> Edit</a>
%   }
              </div>
% }
            </div>
          </div>
        </div>
        <div class="hr"></div>

% for my $r ( @$replies ) {
        <div class="row">
          <div class="col-sm-12">
            <div id="reply-<%= $r->id %>" class="callout">
              <div class="pull-right reply-meta">
                <p class="text-right"><%= distance_of_time_in_words( $r->updated ) %></p>
                <p class="text-right"><%= $r->author_id->username %></p>
              </div>
%== render_markdown( $r->content )
            </div>
          </div>
        </div>
% }

% if( is_user_authenticated ) {
        <div class="hr hr-lg"></div>
        <div class="row">
          <div class="col-sm-12">
            <form action="<%= url_for('current') . '/reply' %>" method="post">
              <input type="hidden" name="parent" value="<%= $response->id %>"></input>
              <div class="row">
                <div class="col-sm-12">
                  <h2>Reply</h2>
                  <textarea name="content" rows="5" class="form-control"></textarea>
                  <div class="hr-sm"></div>
                  <div class="text-right">
                    <button type="submit" class="btn btn-default">Reply</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="hr"></div>
% }
      </div>

      <!-- END CONTENT -->
    </div>
  </div>

  %= include 'footer.inc'

  <!-- MODALS -->
  %= include 'authenticate.inc'

  <!-- SCRIPTS -->
  %= include 'scripts.inc'

  <script>
    $(document).ready( function() {
      $('.nav-tabs a').click( function(e) {
        e.preventDefault()
        $(this).tab('show')
      });
    });
  </script>
</body>
</html>
