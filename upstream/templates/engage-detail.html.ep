<!DOCTYPE html>
<html lang="en" ng-app="canvas">
<head>
  %= include 'header.inc', title => 'KororaProject'
</head>
<body>
  %= include 'noscript.inc'

  <div class="page-container">

    %= include 'navigation.inc', active => 'support'

    <div class="page-content">
      <!-- CONTENT -->

      <div id="page-about" class="container">
        <div class="row">
          <div class="col-sm-12">
            <h1 class="page-title"><a href="/support/engage"><strong>Engage.</strong></a> Your Community</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="callout engage-detail engage-<%= $response->type %>">
              <%== engage_icon( $response->type, 'engage-detail-title-icon' ) %>
              <h1 class="engage-detail-title"><%= $response->title %></h1>

              <div class="engage-detail-content">
%== render_markdown( $response->content )
              </div>

              <div class="engage-detail-tags">
% foreach my $t ( $response->tags ) {
                <span class="label label-default"><%= $t->name %></span>
% }
              </div>

            </div>
            <div class="engage-detail-footer">
              <div class="engage-detail-footer-metadata">
                <p class="text-right">asked <%= distance_of_time_in_words( $response->created ) %></p>
                <p class="text-right">by <%= $response->author_id->username %></p>
              </div>
              <div class="engage-detail-footer-metadata">
                <%== post_gravatar( $response, 32 ) %>
              </div>
% if( is_active_auth ) {
              <div class="engage-detail-footer-metadata">
                <div class="dropdown">
                  <button class="btn btn-sm btn-default dropdown-toggle" type="button" id="post-detail-admin-dropdown" data-toggle="dropdown"><i class="fa fa-fw fa-cogs"></i></button>
                  <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="post-detail-admin-dropdown">
%   if( engage_post_can_subscribe( $response ) ) {
                      <li><a href="<%= url_for('current') . '/subscribe' %>" class="text-left"><i class="fa fa-fwl fa-bookmark"></i> Subscribe</a></li>
  %   } else {
                      <li><a href="<%= url_for('current') . '/unsubscribe' %>" class="text-left"><i class="fa fa-fwl fa-bookmark-o"></i> Unsubscribe</a></li>
  %   }
  %   if( engage_post_can_edit( $response ) ) {
                      <li><a href="<%= url_for('current') . '/edit' %>" class="text-left"><i class="fa fa-fwl fa-edit"></i> Edit</a></li>
  %   }
                    </ul>
                  </div>
                </div>
  % }
            </div>
          </div>
        </div>
        <div class="hr"></div>

% for my $r ( @$replies ) {
        <div class="row">
          <div class="col-sm-12">
            <div id="reply-<%= $r->id %>" class="callout engage-reply">
%== render_markdown( $r->content )
            </div>
            <div class="engage-reply-footer">
              <div class="engage-reply-footer-metadata">
                <p class="text-right">replied <%= distance_of_time_in_words( $r->created ) %></p>
                <p class="text-right">by <%= $r->author_id->username %></p>
              </div>
              <div class="engage-reply-footer-metadata">
                <%== post_gravatar( $r, 32 ) %>
              </div>
            </div>
          </div>
        </div>
% }

% if( is_user_authenticated ) {
        <div class="row">
          <div class="col-sm-12">
            <form action="<%= url_for('current') . '/reply' %>" method="post">
              <input type="hidden" name="parent" value="<%= $response->id %>"></input>
              <div class="row">
                <div class="col-sm-12">
                  <h2>Reply</h2>
                  <textarea name="content" rows="5" class="form-control"></textarea>
                  <div class="hr-sm"></div>
                  <div class="text-right">
                    <button type="submit" class="btn btn-default">Reply</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="hr"></div>
% }
      </div>

      <!-- END CONTENT -->
    </div>
  </div>

  %= include 'footer.inc'

  <!-- MODALS -->
  %= include 'authenticate.inc'

  <!-- SCRIPTS -->
  %= include 'scripts.inc'

  <script>
    $(document).ready( function() {
      $('.nav-tabs a').click( function(e) {
        e.preventDefault()
        $(this).tab('show')
      });
    });
  </script>
</body>
</html>
